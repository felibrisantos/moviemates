{
  "version": 2,
  "builds": [
    {
      "src": "movieticket/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "scripts": {
    "build": "apt-get update && apt-get install -y python3-pip && pip3 install -r requirements.txt && ./build_files.sh"
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "movieticket/wsgi.py"
    }
  ]
}
